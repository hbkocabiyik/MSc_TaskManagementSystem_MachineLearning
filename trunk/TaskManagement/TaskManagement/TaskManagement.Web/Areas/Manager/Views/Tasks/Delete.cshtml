@model TaskManagement.Web.Models.Task
@using TaskManagement.Web.Helpers

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Task</legend>

    <p>
        <table>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th>Estimation</th>
                <td>@Model.EstimatedTime</td>
            </tr>
            <tr>
                <th>Completed</th>
                <td>@Model.SpentTime</td>
            </tr>
            <tr>
                <th>Remaining</th>
                <td>@Model.RemainingTime</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>@Html.GetPriority(@Model.Priority)</td>
            </tr>
            <tr>
                <th>Area</th>
                <td>@Model.Area.Name</td>
            </tr>
        </table>
    </p>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


