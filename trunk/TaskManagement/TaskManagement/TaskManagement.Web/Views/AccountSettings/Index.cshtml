@model TaskManagement.Web.Models.Employee
@using TaskManagement.Web.Helpers

@{
    ViewBag.Title = "Account Settings";
}

<h2>Account Settings - @Html.GetRole(@Model.Role)</h2>

<table>
    <tr>
        <th>Login</th>
        <td>@Model.Login</td>
    </tr>

    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Surname</th>
        <td>@Model.Surname</td>
    </tr>

    <tr>
        <th>Employment Date</th>
        <td>@String.Format("{0:yyyy-MM-dd}", @Model.EmploymentDate)</td>
    </tr>

    <tr>
        <th>Position</th>
        <td>@Html.GetPosition(@Model.PositionLevel, @Model.Role)</td>
    </tr>
</table>
