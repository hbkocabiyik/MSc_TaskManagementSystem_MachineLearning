@model IEnumerable<TaskManagement.Web.Models.Employee>
@using TaskManagement.Web.Helpers

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Login
        </th>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Employment Date
        </th>
        <th>
            Role
        </th>
        <th>
            Position Level
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
            @item.Login
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Surname
        </td>
        <td>
            @String.Format("{0:yyyy-MM-dd}", item.EmploymentDate)
        </td>
        <td>
            @Html.GetRole(@item.Role)
        </td>
        <td>
            @Html.GetPosition(@item.PositionLevel, @item.Role)
        </td>
    </tr>
}

</table>

